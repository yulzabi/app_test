<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.yyulazar.myapplication.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Guard List"
        android:id="@+id/tvMainActivityHeadLine"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:textColor="#ffff3f43" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Show List"
        android:id="@+id/bMainActivityShowList"
        android:layout_below="@+id/tvMainActivityHeadLine"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="75dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="New List"
        android:id="@+id/bMainActivityCreateNewList"
        android:layout_alignTop="@+id/bMainActivityShowList"
        android:layout_toRightOf="@+id/bMainActivityShowList"
        android:layout_marginLeft="30dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Show statistic"
        android:id="@+id/bMainActivityShowStatistic"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/bMainActivityShowList" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button4"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/bMainActivityCreateNewList" />
</RelativeLayout>
